{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/solving_cracking_the_coding_interview/CtCI-6th-Edition-CSharp/ctci/ctci.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/solving_cracking_the_coding_interview/CtCI-6th-Edition-CSharp/ctci/ctci.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/solving_cracking_the_coding_interview/CtCI-6th-Edition-CSharp/ctci/ctci.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "echo",
            "command": "g++",
            "type": "shell",
            "args": [
                "-g","mergeSort.cpp"
            ],
            "group": {
                "kind":"build",
                "isDefault": true
            }
        }
    ]
}